{
  "manifest_version": 3,
  "name": "Django DevBar",
  "version": "0.1.0",
  "description": "Chrome DevTools panel for Django DevBar performance metrics",
  "devtools_page": "devtools.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "http://127.0.0.1/*",
        "https://localhost/*",
        "http://*.local/*",
        "http://*.test/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
